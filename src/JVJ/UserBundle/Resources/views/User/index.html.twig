{% extends 'JVJPlantillaBundle::base.html.twig' %}

{%block titulo %}Lista de  User{%endblock%}

{%block nav2%}{%- include 'JVJPlantillaBundle::Navegador2/backend.html.twig' with {'menu':'User'}%}{%- endblock%}
{% block contenido %}
<div id="ventana_normal" class="box">
    <div class="box-header"><h1>{{block('titulo')}}</h1></div>

    <table class="datatable">
        <thead>
            <tr>
                <th>Username</th>

                <th>Password</th>
                <th>Email</th>

                <th>Isactive</th>
                <th>Face</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
    {% for entity in entities %}
                <tr>
                    <td>{{ entity.username }}</td>

                    <td>{{ entity.password }}</td>
                    <td>{{ entity.email }}</td>

                    <td>{{ entity.isActive }}</td>
                    <td>{{ entity.face }}</td>
                    <td>
                        <ul>
                            <a class="button small"  onclick="abreventana(this.href); return false;" rel="tooltip_s" original-title="show" href="{{ path('user_show', { 'id': entity.id }) }}"><span class="glyph show"></span></a>
                            <a class="button small"  onclick="abreventana(this.href); return false;" rel="tooltip_s" original-title="edit" href="{{ path('user_edit', { 'id': entity.id }) }}"><span class="glyph edit"></span></a>
                        </ul>
                    </td>
                </tr>
    {% endfor %}
            </tbody>
        </table>


        <div class="action_bar">
            <a id='accion_nuevo' class="button blue" href="#"><span class="glyph plus2"></span><font id="muestra_crear">Crear </font> User</a>
        </div>

    </div>

    <div id="ventana_derecha">
    </div>


{%- endblock%}