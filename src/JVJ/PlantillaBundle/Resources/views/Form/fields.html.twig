{# empty Twig template #}

{% block field_row %}
    <p>
        {{ form_label(form) }}
        {{ form_errors(form) }}
        {{ form_widget(form) }}
    </p>
{% endblock field_row %}
    
{% block field_widget %}
    {% set type = type|default('text') %}
    
    <input type="{{ type }}" {{ block('widget_attributes') }} value="{{ value }}" />

    {% if help is defined %}
        <small>{{ help }}</small>
    {% endif %}
{% endblock %}